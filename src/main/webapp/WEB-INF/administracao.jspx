<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:fmt="http://java.sun.com/jsp/jstl/fmt" version="2.0">

    <jsp:directive.page contentType="text/html" pageEncoding="UTF-8"/>
    <jsp:output omit-xml-declaration="true" doctype-root-element="HTML" doctype-system="about:legacy-compact"/>

    <html>
        <head>
            <title>Posto - Administração</title>
            <link rel="stylesheet" type="text/css" href="css/administracao.css"/>
            <link rel="stylesheet" type="text/css" href="css/geral.css"/>
            <link rel="stylesheet" type="text/css" href="css/seta.css"/>
            <script src="${pathResources}/Namtab/js/administracao.js"><jsp:text /></script>
        </head>

        <body>

            <div id="nav">
                <ul id="menu">
                    <a href="NamtabServlet"><li>Home</li></a>
                    <a href="RelatorioServlet"><li>Relatório</li></a>
                    <a href="AdministracaoServlet"><li>Administração</li></a>
                    <a href="VendaServlet"><li>Venda</li></a>
                    <p id="varUsuario" name="user">Bem-vindo, <br></br><c:out value="${usuario.nome}"/></p>

                </ul>
            </div>
            <form name="form" id="formulario" action="AdministracaoServlet">
                <label class="labelformulario" id="psq">Pesquisar: </label> <input type="text" name="pesquisa" id="psqCampo" onblur="pesquisa();">${user.idUsuario}</input>
                <br></br>
                <br></br>
                <fieldset>
                    <legend>Dados de Usuario</legend>
                    <label class="labelformulario" id="lblcpf">CPF: </label> <input type="text" name="cpf">${user.idUsuario}</input><br></br>
                    <label class="labelformulario">Nome Completo: </label> <input type="text" name="nome" id="inputnome">${user.nome}</input> <br></br>
                    <label class="labelformulario" id="lblcargo">Cargo: </label> 
                    <select name="cargo" >
                        <option>${user.funcao}</option>
                        <option>Gerente</option>
                        <option>Frentista</option>
                        <option>Vendedor</option>

                    </select>
                    <label class="labelformulario" id="lblPerfil">Perfil: </label> 
                    <select name="perfil" >
                        <option>${user.tipoPerfil}</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                    <label class="labelformulario" id="lblFilial">Filial: </label> <input type="text" name="idFilial">${user.idFilial}</input><br></br>
                    <label class="labelformulario">Senha: </label> <input type="password" name="senha">${user.senha}</input><br></br>

                </fieldset>

                <fieldset>
                    <legend>Opções</legend>
                    <button id="novo" class="novo" type="submit" formaction="AdministracaoServlet" method="get">Pesquisar</button>
                    <button id="novo" class="novo" value="novo">Novo Usuário</button>
                    <button name="guiTeste" type="submit" class="btn" value="pesquisa">Cadastrar</button>
                </fieldset>
            </form>



            <span>Matriz - Av Deputado Oswaldo Moraes e silva</span>

        </body>

    </html>

</jsp:root>
